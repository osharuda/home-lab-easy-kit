{
  "firmware" : {
    "mcu_model" : "stm32f103",
    "device_name" : "RPiExtender",
    "install_prefix" : "RPiExtender",
    "install_path" : "/opt",
    "i2c_bus" : {
      "clock_speed" : 100000,
      "buffer_size" : 512,
      "address" : 32,
      "requires" :  {"i2c" : "I2C2"}
    }},

  "devices" : {
    "DeskDevCustomizer" : {
      "deskdev" : {
        "dev_id" : 2,
        "requires" : {  "up"      : { "gpio" : "PA_3" },
                        "down"    : { "gpio" : "PA_2" },
                        "left"    : { "gpio" : "PA_5" },
                        "right"   : { "gpio" : "PA_4" },
                        "encoder" : {"A" : { "gpio" : "PA_7"}, "B" : {"gpio" : "PA_6"}}}
    }},

    "RTCCustomizer" : {
      "rtc": {
        "dev_id": 3,
        "requires": { "bkp" : "BKP_DR1",
                      "rtc" : "RTC"}
    }},

    "IRRCCustomizer" : {
      "irrc": {
        "dev_id": 5,
        "buffer_size" : 64,
        "requires": {"data" : {"gpio" : "PA_1"}}
    }},

    "UartProxyCustomizer" : {
      "sim800l" : {
        "dev_id" : 4,
        "hint" : "gsmmodem",
        "buffer_size" : 2000,
        "baud_rate" : 9600,
        "requires" : { "usart" : "USART1"}
      }},

    "LCD1602aCustomizer" : {
      "lcd": {
        "dev_id" : 1,
        "welcome" : ["-=RPi Extender=-","   loading ..."],
        "requires" : {"enable" : {"gpio" : "PB_14"},
                      "reg_sel" : {"gpio" : "PB_13"},
                      "data4" : {"gpio" : "PB_6"},
                      "data5" : {"gpio" : "PB_7"},
                      "data6" : {"gpio" : "PB_8"},
                      "data7" : {"gpio" : "PB_9"},
                      "light" : {"gpio" : "PB_0"}}
    }},

    "GPIODevCustomizer": {
      "gpio" : {
        "dev_id" : 6,
        "description" : {"sim800_reset" : {
                           "type":   "GPIO_Mode_Out_PP",
                           "gpio":   "PA_11",
                           "default": 1},
                         "ir_power" : {
                           "type":    "GPIO_Mode_Out_PP",
                           "gpio":    "PA_0",
                           "default": 1}}}
  }}
}
