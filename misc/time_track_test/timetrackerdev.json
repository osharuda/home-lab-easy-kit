{
  "firmware" : {
    "mcu_model" : "stm32f103",
    "device_name" : "timetrackerdev_tester",
    "sys_tick": {
      "requires" : {"timer": "TIM3"}},
    "i2c_bus" : {
      "clock_speed" : 100000,
      "buffer_size" : 96,
      "address" : 21,
      "requires" :  {"i2c" : "I2C2"}
    }},

  "devices" : {
    "TimeTrackerDevCustomizer": {
      "timetrackerdev_0" : {
        "dev_id" : 2,
        "buffer_size" : 16384,
        "pull": "up",
        "trigger": "edge",
        "requires" :  {"interrupt" : {"gpio" : "PA_3"},
                       "near_full"  : {"gpio" : "PA_4"}}
      }
    }
  }
}

